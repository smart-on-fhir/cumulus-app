{
  "name": "cumulus-app",
  "version": "3.0.0",
  "private": true,
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.6.5",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/sequelize": "^4.28.14",
    "@types/slug": "^5.0.3",
    "bcryptjs": "^2.4.3",
    "cli-color": "^2.0.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dockerode": "^3.3.1",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.2",
    "form-data": "^4.0.0",
    "highcharts": "^10.3.3",
    "html2canvas": "^1.4.1",
    "if-env": "^1.0.4",
    "mailgun.js": "^8.0.2",
    "markdown-to-jsx": "^7.4.6",
    "moment": "^2.29.1",
    "pg": "^8.7.3",
    "react": "^19.1.0",
    "react-contenteditable": "^3.3.6",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.2.1",
    "run-container": "^2.0.12",
    "sass": "^1.86.0",
    "sequelize": "^6.16.0",
    "slug": "^5.2.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "umzug": "^3.1.1"
  },
  "scripts": {
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "BUILD_PATH='./dist/frontend' react-scripts build",
    "build:server": "tsc -p backend/tsconfig.json",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node dist/backend/index.js",
    "start:prod:ts": "ts-node -P backend/tsconfig.json backend",
    "start:dev": "cd docker && docker compose --env-file='../.env.development.local' up",
    "start:hmr": "PORT=3000 react-scripts start",
    "watch:server": "nodemon -e js,ts,tsx,json -w backend -x 'ts-node -P backend/tsconfig.json -r dotenv-expand/config backend dotenv_config_path=.env.development.local'",
    "test": "npm run test:server",
    "test:frontend:old": "react-scripts test --coverage",
    "test:frontend:watch:old": "react-scripts test --watch --coverage",
    "test:server": "DOTENV_CONFIG_PATH=.env.test nyc --reporter=lcov ts-mocha -p test/tsconfig.json",
    "test:server:watch": "nodemon -w backend -w test -e ts,tsx,json -x 'npm run test:server'",

    "test:frontend"         : "vitest",
    "test:frontend:watch"   : "vitest --watch",
    "test:frontend:coverage": "vitest run --coverage",

    "openapi:lint": "redocly lint backend/api.yaml",
    "openapi:build": "redocly build-docs backend/api.yaml --output=docs/api.html",
    "openapi:watch": "nodemon -w backend/api.yaml -x 'npm run openapi:lint && npm run openapi:build'",
    "eject": "react-scripts eject",
    "vite": "VITE_DEBUG=true vite --force",
    "vite:build": "tsc -b && vite build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.8",
    "@types/cli-color": "^2.0.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^22.13.14",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-v8": "^3.1.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "commander": "^11.1.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "mocha": "^10.7.3",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "ts-mocha": "^10.0.0",
    "vite": "^6.2.4",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22"
  },
  "type": "commonjs"
}
